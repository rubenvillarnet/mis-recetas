<h2 class="border-bottom mb-4">{{recipe.title}}</h2>

<div class="row">
  <div class="col-12 col-md-3">
<h3 class="h4">Ingredientes</h3>
<ul>
  {{#each recipe.ingredients}}
  <li class="mb-2">{{this}}</li>
  {{/each}}
</ul>

  </div>
  <div class="col">
<h3 class="h4">Pasos</h3>
<ol>
  {{#each recipe.steps}}
  <li class="mb-3">{{this}}</li>
  {{/each}}
</ol>
  </div>
</div>



{{#if recipe.footnote}}
<div class="alert alert-primary">
<p>{{recipe.footnote}}</p>
</div>
{{/if}}