---
layout: default
pagination:
  data: primeros
  size: 1
  alias: primero
permalink: "primeros/{{ slug primero.title }}/"
---

<h2 class="border-bottom mb-4">{{primero.title}}</h2>

<div class="row">
  <div class="col-12 col-md-3">
<h3 class="h4">Ingredientes</h3>
<ul>
  {{#each primero.ingredients}}
  <li class="mb-2">{{this}}</li>
  {{/each}}
</ul>

  </div>
  <div class="col">
<h3 class="h4">Pasos</h3>
<ol>
  {{#each primero.steps}}
  <li class="mb-3">{{this}}</li>
  {{/each}}
</ol>
  </div>
</div>



{{#if primero.footnote}}
<div class="alert alert-primary">
<p>{{primero.footnote}}</p>
</div>
{{/if}}